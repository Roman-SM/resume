<main class="p-5">
  <section class="mb-5">
    <div class="col-12">
      <div class="row">
        <div class="card p-3">
          <div class="nav">
            {{#with navigation}}
            {{#each links}}
            {{#if @last}}
            <div class="col-1">
              <a href="{{href}}" class="nav-link m-0 p-0 text-center disabled">{{text}}</a>
            </div>
            {{else}}
            <div class="col-1">
              <a href="{{href}}" class="nav-link m-0 p-0 text-center">{{text}}</a>
            </div>
            {{/if}}
            {{/each}}
          </div>
          {{/with}}
        </div>
      </div>
    </div>
  </section>

  <section class="row">
    {{#with formBlock}}
    <section class="col-8">
      <h1 class="mt-5">{{header}}</h1>
      <p>{{rating.title}}: {{rating.value}}</p>
      <div class="row g-2 my-5">
        <div class="nav nav-tabs">
          {{#each actionBlock.tabs}}
          <div class="nav-item">
            {{#if isActive}}
            <div class="nav-link active">{{text}}</div>
            {{else}}
            <div class="nav-link">{{text}}</div>
            {{/if}}
          </div>
          {{/each}}
        </div>
      </div>

      <hr>

      <div class="card my-5">
        <div class="card-body">
          {{#with actionBlock}}
          {{#with report}}
          <p>{{title}}</p>
          <div>
            <a href="{{button.link}}" class="btn btn-dark">{{button.text}}</a>
          </div>
          {{/with}}
          {{/with}}
        </div>
      </div>

      <hr>

      <div class="my-5">
        {{#with feedbackBlock}}
        <h2 class="mb-5">{{title}}</h2>
        {{#each buttons}}
        {{#if isWarning}}
        <a href="{{link}}" class="btn btn-warning">{{text}}</a>
        {{else isSuccess}}
        <a href="{{link}}" class="btn btn-success">{{text}}</a>
        {{else isDanger}}
        <a href="{{link}}" class="btn btn-danger">{{text}}</a>
        {{/if}}
        {{/each}}
        {{/with}}
      </div>
    </section>

    <section class="col-4">
      {{#with goodsInfo}}
      <div class="card">
        <div class="card-body">
          <img class="card-img-top" src="{{photo}}">
          <h5 class="my-3">{{name}}</h5>
        </div>
      </div>
      <br>
      <div class="card">
        <div class="card-body py-3">
          <b>{{price}}</b>
          {{#if inMarket}}
          <p>Є в наявності</p>
          {{else}}
          <p>Немає в наявності</p>
          {{/if}}
          {{#each buttons}}
          {{#if isPrimary}}
          <div class="mb-2">
            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
          </div>
          {{else isSecondary}}
          <div>
            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
          </div>
          {{/if}}
          {{/each}}
        </div>
      </div>
      <div class="card mt-4">
        <div class="card-body">
          <div>{{seller.title}}: <b>{{seller.value}}</b></div>
        </div>
      </div>
      {{/with}}
    </section>
    {{/with}}
  </section>

  <hr>

  <section>
    {{#each reviewList}}
    <div class="card my-5">
      <div class="card-body">
        <div class="card">
          <div class="card-body">
            <h5>{{title.userName}}</h5>
            <p>{{title.caption}}</p>
            <p>{{title.date}}</p>
          </div>
        </div>
        {{#with reviewBody}}
        <div class="card">
          <div class="card-body">
            <p>{{seller.title}}: {{seller.value}}</p>
            <p>{{rating.title}}: {{rating.value}}</p>
            <p>{{text}}</p>
            <p><b>{{advantages.title}}: </b></p>
            <p>{{advantages.text}}</p>
            <p><b>{{disadvantages.title}}: </b></p>
            <p>{{disadvantages.text}}</p>
            <div class="row">
              {{#each images}}
              <div class="col-1">
                <div class="card">
                  <img class="card-img-top" src="{{this}}">
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
        {{#each coments}}
        <div class="card my-3 ms-5">
          <div class="card-body">
            <h5>{{userName}}</h5>
            <p>{{date}}</p>
            <p>{{text}}</p>
          </div>
        </div>
        {{/each}}
        {{/with}}
      </div>
    </div>
    {{/each}}
  </section>

  <section class="mb-5">
    <div class="card text-bg-success">
      <div class="card-body text-center">
        {{#with service}}
        <h2 class="card-title">{{title}}</h2>
        <p>{{description}}</p>
        {{#each buttons}}
        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
        {{/each}}
        {{/with}}
      </div>
    </div>
  </section>

  <hr>

  <footer>
    <div class="col-12">
      <div class="row">
        {{#each footer}}
        <div class="col-2">
          <a href="{{[0].link}}" class="nav nav-link p-0 pb-2 active">{{[0].text}}</a>
          <a href="{{[1].link}}" class="nav nav-link p-0 pb-2 active">{{[1].text}}</a>
          <a href="{{[2].link}}" class="nav nav-link p-0 pb-2 active">{{[2].text}}</a>
          <a href="{{[3].link}}" class="nav nav-link p-0 pb-2 disabled">{{[3].text}}</a>
        </div>
        {{/each}}
      </div>
    </div>
  </footer>
</main>