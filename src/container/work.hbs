{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
  <main>
    <section>
      {{> title data="Work history" big=true}}
      <div>
        <ul>
          {{#each works}}
          <li>
            <div>{{position}}</div>

            <br>

            <div>
              {{duration.from}} -
              {{#if duration.to}}
              {{duration.to}}
              {{else}}
              (Досі працюємо)
              {{/if}}
            </div>

            <br>

            <div>
              {{#if company.url}}
              {{> linc text=company.name href=company.url blank=true noLine=true}}
              {{else}}
              <b>{{company.name}}</b>
              {{/if}}
            </div>

            <br>
            <br>

            <div>
              <strong>Project({{projectAmount}})</strong>
            </div>

            <br>

            <ul>
              {{#each projects}}
              <li>
                <div>
                  {{> linc text=name href=url blank=true noLine=true}}
                </div>
                <div>
                  <p>{{about}}</p>
                </div>
                <div>
                  <em>Project stacks</em>
                  ({{stackAmount}})
                </div>

                <br>

                <ul>
                  {{#each stacks}}
                  <li>{{name}}</li>
                  {{/each}}
                </ul>
                <br>
                <div>
                  <em>Project avards</em>
                </div>
                <br>
                <ul>
                  {{#each avards}}
                  <li>{{name}}</li>
                  {{/each}}
                </ul>

              </li>
              {{/each}}
            </ul>
          </li>
          <br>
          {{/each}}
        </ul>
      </div>
    </section>
  </main>
  {{/with}}
</div>

