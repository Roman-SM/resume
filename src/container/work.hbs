{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/work"
}}

<main>
  {{#with main}}
  <section class="ms-5">
    {{> title data="Work history" big=true}}
    <div>
      <ul>
        {{#each works}}
        <li>
          <div class="py-2">{{position}}</div>
          <div>
            {{duration.from}} -
            {{#if duration.to}}
            {{duration.to}}
            {{else}}
            (Досі працюємо)
            {{/if}}
          </div>
          <div class="pt-2">
            {{#if company.url}}
            {{> linc text=company.name href=company.url blank=true noLine=true}}
            {{else}}
            <b>{{company.name}}</b>
            {{/if}}
          </div>
          <div class="pt-5">
            <strong>Project({{projectAmount}})</strong>
          </div>
          <div class="pt-5">
            <ul>
              {{#each projects}}
              <li>
                <div>
                  {{> linc text=name href=url blank=true noLine=true}}
                </div>
                <div>
                  <p>{{about}}</p>
                </div>
                <div class="pb-4">
                  <em>Project stacks</em>
                  ({{stackAmount}})
                </div>
                <ul>
                  {{#each stacks}}
                  <li>{{name}}</li>
                  {{/each}}
                </ul>
                <br>
                <div class="pb-4">
                  <em>Project avards</em>
                </div>
                <ul>
                  {{#each avards}}
                  <li>{{name}}</li>
                  {{/each}}
                </ul>
              </li>
              {{/each}}
            </ul>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </section>
  {{/with}}
</main>

