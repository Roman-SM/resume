{{#with footer}}
<footer>
    <hr class="my-5">
    <div>
        {{#with social}}
        {{> linc text=email.text href=email.href blank=true }}
        {{> linc text=phone.text href=phone.href blank=true }}
        {{> linc text=linkedin.text href=linkedin.href blank=true noLine=true}}
        {{/with}}
    </div>
    <div class="my-3">
        <em>Copyright by {{../header.name.firstname}} {{../header.name.lastname}} </em>
    </div>
    <div>
        {{../header.address}}
    </div>
</footer>
{{/with}}